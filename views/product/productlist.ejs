<%- include('../header', { pageTitle: 'Product List' }) %>
    <%- include('../sidebar') %>
        <div class="page-wrapper">
            <div class="content">
                <div class="page-header">
                    <div class="page-title">
                        <h4>Product List</h4>

                        <!-- <h6>Manage your products</h6> -->
                    </div>

                    <!-- Feature Status Modal -->
                    <div class="modal fade" id="featured_status" tabindex="-1" aria-labelledby="featured_status"
                        aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"></h5>
                                    <button type="button" class="close closefilter" data-bs-dismiss="modal"
                                        aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                                <div class="modal-body"></div>
                                <div class="modal-footer" id="modal_footer_button">
                                    <button type="submit" class="btn btn-submit"
                                        id="feature_switch_submit">Submit</button>
                                    <button type="button" class="btn btn-cancel closefilter"
                                        data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Status Modal (Already Exists) -->
                    <div class="modal fade" id="status" tabindex="-1" aria-labelledby="status" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"></h5>
                                    <button type="button" class="close closefilter" data-bs-dismiss="modal"
                                        aria-label="Close"><span aria-hidden="true">×</span></button>
                                </div>
                                <div class="modal-body"></div>
                                <div class="modal-footer" id="modal_footer_button">
                                    <button type="submit" class="btn btn-submit" id="switch_submit">Submit</button>
                                    <button type="button" class="btn btn-cancel closefilter"
                                        data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <form id="showDataForm">
                            <div class="col-12 mb-3">
                                <h4>Filter Products</h4>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label>Brand</label>
                                        <select name="brand_id" class="select"  id="brand_id">
                                            <option value="" selected="">All Brands</option>
                                            <option value="1">The Dibo</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label>Main Category<span class="text-danger">*</span></label>
                                        <select id="categorylist" name="parent_id" class="select" required="">
                                            <option value="" selected="" disabled="">Select main category</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label>Sub Category<span class="text-danger">*</span></label>
                                        <select id="subCategory" name="parent_id" class="select" required="">
                                            <option value="" selected="" disabled="">Select main category</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label>Sub Sub Category</label>
                                        <select class="select" id="subSubCategory">
                                            <option value="" selected="" disabled="">Select Sub Sub Category</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end gap-3">
                                    <button type="reset" id="reset" class="btn btn-cancel">Reset</button>
                                    <button type="submit" id="submit_button_product_filter" class="btn btn-submit">Show Data</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="row mt-20">
                    <div class="col-md-12" id="category_card">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-top">
                                    <div class="search-set">
                                        <div class="search-path" style="display: none;">
                                            <a class="btn btn-filter" id="filter_search">
                                                <img src="assets/img/icons/filter.svg" alt="img">
                                                <span><img src="assets/img/icons/closes.svg" alt="img"></span>
                                            </a>
                                        </div>
                                        <div class="search-input">
                                            <a class="btn btn-searchset"><img src="assets/img/icons/search-white.svg"
                                                    alt="img"></a>
                                        </div>
                                    </div>
                                    <div class="wordset">
                                        <!-- <ul>
                                            <li>
                                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="pdf"><img
                                                        src="assets/img/icons/pdf.svg" alt="img"></a>
                                            </li>
                                            <li>
                                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="excel"><img
                                                        src="assets/img/icons/excel.svg" alt="img"></a>
                                            </li>
                                            <li>
                                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="print"><img
                                                        src="assets/img/icons/printer.svg" alt="img"></a>
                                            </li>
                                        </ul> -->
                                        <ul>
                                            <li> 
                                                <button class="btn btn-success" id="downloadButton">Download Excel File
                                                </button>
                                            </li>
                                            <li> 
                                                <a href="/limited_stock" class="btn btn-danger">
                                                    Limited Stock
                                                </a>
                                            </li>
                                            <li> 
                                                <a href="/addproduct" class="btn btn-primary mr-4">
                                                    Add New Product
                                                </a>
                                            </li>
                                            <li> 
                                                <a href="#" id="delete_category_button" class="btn btn-outline-warning">
                                                    Trash Products
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="card mb-0" style="display: none;" id="filter_inputs">
                                    <div class="card-body pb-0">
                                        <div class="row">
                                            <div class="col-lg-12 col-sm-12">
                                                <div class="row">
                                                    <div class="col-lg-1 col-sm-6 col-12">
                                                        <div class="form-group">
                                                            <a class="btn btn-filters ms-auto"><img
                                                                    src="assets/img/icons/search-whites.svg"
                                                                    alt="img"></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- <div class="form-group">
                                    <button type="submit" id="delete_category_button" class="btn btn-show">Deleted Category</button>
                                </div> -->

                                <div class="table-responsive">
                                    <table class="table datanew " id="productTable">
                                        <thead>
                                            <tr>
                                                <th>SL</th>
                                                <th>Product Name</th>
                                                <th>Product Type</th>
                                                <th>Purchase Price</th>
                                                <th>Selling Price</th>
                                                <th>Show As Featured</th>
                                                <th>Active Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <!-- <tbody id="product_tbody"></tbody> -->
                                    </table>

                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Deleted Category table Start -->
                    
                    <div class="col-md-12" id="delete_category_card" style="display: none;">
                        <div class="wordset">
                                <li> 
                                    <a href="#" id="active_category_button"  class="btn btn-outline-warning">
                                        All Products
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="table-top">
                                    <div class="page-title">
                                        <h4>Deleted Product List</h4>
                                    </div>
                                    <div class="search-set">
                                        <div class="search-path" style="display: none;">
                                            <a class="btn btn-filter" id="filter_search">
                                                <img src="assets/img/icons/filter.svg" alt="img">
                                                <span><img src="assets/img/icons/closes.svg" alt="img"></span>
                                            </a>
                                        </div>
                                        <div class="search-input">
                                            <a class="btn btn-searchset"><img src="assets/img/icons/search-white.svg"
                                                    alt="img"></a>
                                        </div>
                                    </div>

                                </div>
                                <div class="table-responsive">
                                    <table class="table datanew" id="restoreTable">
                                        <thead>
                                            <tr class="text-center">
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Deleted Category table End -->
                </div>
            </div>

            <!-- Delete Modal Start -->
            <div class="modal fade" id="proDelete" tabindex="-1" aria-labelledby="proDelete" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered delete-modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Warning !</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">×</span></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    <h4>Are you sure?</h4>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-center">
                            <button type="button" class="btn btn-submit" id="deleteAPI">Submit</button>
                            <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Delete Modal End -->
        </div>
        <%- include('productlist_script')%>
            <%- include('../footer') %>