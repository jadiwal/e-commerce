                        <div class="col-lg-6 form-group">
                            <label for="exampleInputEmail" class="title-color d-flex gap-1 align-items-center">Country</label>
                            <input type="text" class="form-control form-control-user" id="country" name="country" value="" placeholder="Country" required="">
