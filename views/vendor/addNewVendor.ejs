                            <input type="text" class="form-control form-control-user" id="bank_name" name="bank_name" value="" placeholder="Ex: Bank Of India" required="">
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="exampleInputEmail" class="title-color d-flex gap-1 align-items-center">Account Number</label>
                            <input type="text" class="form-control form-control-user" id="account_number" name="account_number" value="" placeholder="Account Number" required="">
                        </div>
                        <div class="col-lg-6 form-group">
                            <label for="exampleInputEmail" class="title-color d-flex gap-1 align-items-center">IFSC Code</label>
                            <input type="text" class="form-control form-control-user" id="ifsc_code" name="ifsc_code" value="" placeholder="IFSC Code" required="">
                        </div>
                        
