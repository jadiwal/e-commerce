<%- include('../header', { pageTitle: 'Sub Sub Category List' }) %>
    <%- include('../sidebar') %>
        <div class="page-wrapper">
            <div class="content">
                <div class="page-header">
                    <div class="page-title">
                        <h4>Product Sub Sub Category</h4>
                        <!-- <h6>Create new product Category</h6> -->
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Sub Sub category name<span class="text-danger">*</span>(EN)</label>
                                            <input type="text" name="name" id="subsubcategory" class="form-control" placeholder="New Sub Category" required="">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                        <label>Main Category<span class="text-danger">*</span></label>
                                        <select id="categorylist" name="parent_id" class="select"  required="">
                                        <option value="" selected="" disabled="">Select main category</option>
                                        </select>
                                       </div>
                                    </div>
                                    <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Sub Category<span class="text-danger">*</span></label>
                                        <select id="subCategory" name="parent_id" class="select"  required="">
                                            <option value="" selected="" disabled="">Select main category</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Priority</label>
                                        <select class="select" name="priority" id="priority" required="">
                                            <option disabled="" selected="">Set Priority</option>
                                            <option value="0">0</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                        </select>
                                    </div>
                                </div>
                           
                            
                                <div class="d-flex justify-content-end gap-3">
                                    <button type="reset" id="reset" class="btn btn-cancel">Reset</button>
                                    <button type="submit" id="sumbit_button" class="btn btn-submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="row mt-20">
                    <div class="col-md-12" id="subsubcategory_card">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-top">
                                    <div class="search-set">
                                        <div class="search-path" style="display: none;">
                                            <a class="btn btn-filter" id="filter_search">
                                                <img src="assets/img/icons/filter.svg" alt="img">
                                                <span><img src="assets/img/icons/closes.svg" alt="img"></span>
                                            </a>
                                        </div>
                                        <div class="search-input">
                                            <a class="btn btn-searchset"><img src="assets/img/icons/search-white.svg"
                                                    alt="img"></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card mb-0" style="display: none;" id="filter_inputs">
                                    <div class="card-body pb-0">
                                        <div class="row">
                                            <div class="col-lg-12 col-sm-12">
                                                <div class="row">
                                                    <div class="col-lg-1 col-sm-6 col-12">
                                                        <div class="form-group">
                                                            <a class="btn btn-filters ms-auto"><img
                                                                    src="assets/img/icons/search-whites.svg"
                                                                    alt="img"></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" id="delete_category_button" class="btn btn-show">Deleted Sub Category</button>
                                </div>
                                <div class="table-responsive">
                                    <table class="table datanew" id="subsubcategoryTable">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Sub Sub Category Name</th>
                                                <th>Priority</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12" id="delete_category_card" style="display: none;">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-top">
                                    <div class="page-title">
                                        <h4>Deleted Category List</h4>
                                     </div>
                                    <div class="search-set">
                                        <div class="search-path" style="display: none;">
                                            <a class="btn btn-filter" id="filter_search">
                                                <img src="assets/img/icons/filter.svg" alt="img">
                                                <span><img src="assets/img/icons/closes.svg" alt="img"></span>
                                            </a>
                                        </div>
                                        <div class="search-input">
                                            <a class="btn btn-searchset"><img src="assets/img/icons/search-white.svg"
                                                    alt="img"></a>
                                        </div>
                                    </div>
                                    
                                </div>

                                <div class="form-group">
                                    <button type="submit" id="active_category_button" class="btn btn-show">Active Sub Category</button>
                                </div>
    
                                <div class="table-responsive">
                                    <table class="table datanew" id="restoreTable">
                                        <thead>
                                            <tr class="text-center">
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Deleted Category table End -->
                </div>
            </div>
            </div>
            <!-- Delete Modal Start -->
            <div class="modal fade" id="subDelete" tabindex="-1" aria-labelledby="subDelete" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered delete-modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Warning !</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">×</span></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                       <h4>Are you sure?</h4>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-center">
                            <button type="button" class="btn btn-submit" id="deleteAPI">Submit</button>
                            <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Delete Modal End -->
        </div>
      
        <%- include('subsubcategory_script') %>
            <%- include('../footer') %>
